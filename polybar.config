[colors]
;background = ${xrdb:color0:#222}
background = #e533393b
background-alt = #ffb52a
;foreground = ${xrdb:color7:#222}
foreground = #ffffff
foreground-alt = #555
primary = #ffb52a
secondary = #e60053
alert = #bd2c40

[bar/top]
monitor = ${env:MONITOR:VGA-0}
width = 100%
height = 27
radius = 1.0
fixed-center = true
background = ${colors.background}
foreground = ${colors.foreground}
font-0 = DejaVuSansMono Nerd Font Mono:pixelsize=10;1
font-1 = FontAwesome 5 Free:pixelsize=10;1
font-2 = FontAwesome 5 Brands:pixelsize=10;1
font-3 = Symbola:pixelsize=10;1
font-4 = Source Han Sans JP:pixelsize=10;1
font-5 = Noto Color Emoji:pizxelsize=10;1
font-6 = Cantarell:pixelsize=10;1
override-redirect = false
modules-left = date battery pulseaudio
modules-center = filesystem cpu
modules-right = i3
offset-x = 35%
bottom = false

[module/date]
type = internal/date
interval = 1.0
time = %l:%M:%S %p
date = %Y-%m-%d%
label = %time%
format-padding = 1

[module/filesystem]
type = internal/fs
mount-0 = /
interval = 10
fixed-values = true
spacing = 4
format-padding = 1
format-mounted = <label-mounted> <bar-used>
label-mounted = %mountpoint%:
bar-used-format = %fill%%indicator%%empty%
bar-used-width = 10
bar-used-gradient = false
bar-used-foreground-0 = #ffffff
bar-used-fill = â–ˆ
bar-used-empty = â–ˆ
bar-used-empty-foreground = ${root.background}
bar-used-indicator = 

[module/cpu]
type = internal/cpu
interval = 0.5
format = <label> <ramp-coreload>
format-padding = 1
label = CPU %percentage%%
ramp-coreload-spacing = 1
ramp-coreload-0 = â–
ramp-coreload-1 = â–‚
ramp-coreload-2 = â–ƒ
ramp-coreload-3 = â–„
ramp-coreload-4 = â–…
ramp-coreload-5 = â–†
ramp-coreload-6 = â–‡
ramp-coreload-7 = â–ˆ

[module/i3]
type = internal/i3
pin-workspaces = true
strp-wsnumbers = true
wrapping-scroll = true
enable-scroll = true
enable-click = true
label-separator = |
label-mode-padding = 1
label-focused = %name%
label-focused-background = ${colors.background}
label-focused-padding = 1
label-unfocused = %name%
label-unfocused-padding = 1
label-visible = %name%
label-visible-padding = 1
label-urgent = %name%
label-urgent-background = #ac7f0000
format = <label-state>

[module/pulseaudio]
type = internal/pulseaudio
use-ui-max = true
format-volume = <ramp-volume>
label-muted = ğŸ”‡ muted
label-muted-foreground = #666
ramp-volume-0 = ğŸ”ˆ
ramp-volume-1 = ğŸ”‰
ramp-volume-2 = ğŸ”Š
format-muted-padding = 1
format-volume-padding = 1
format-padding = 1

[module/battery]
type = internal/battery
full-at = 99
battery = BAT0
adapter = ADP1
poll-interval = 1
format-padding = 2
format-charging = <ramp-capacity>
format-discharging = <ramp-capacity>
format-full = <ramp-capacity>
label-charging = Charging %percentage%%
format-charging-padding = 2
label-discharging = Discharging %percentage%%
format-discharging-padding = 2
label-full = ï–„
ramp-capacity-0 = ï‰„
ramp-capacity-1 = ï‰ƒ
ramp-capacity-2 = ï‰‚
ramp-capacity-3 = ï‰
ramp-capacity-4 = ï‰€

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over
;pseudo-transparency = false

[global/wm]
margin-top = 5
margin-bottom = 5

